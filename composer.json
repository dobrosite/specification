{
    "name": "dobrosite/specification",
    "description": "Specification pattern for PHP",
    "type": "library",
    "keywords": [
        "spec",
        "specification"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Михаил Красильников",
            "email": "m.krasilniov@dobro.site"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^0.12.19",
        "phpstan/phpstan-phpunit": "^0.12.8",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "DobroSite\\Specification\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DobroSite\\Specification\\Tests\\": "tests"
        }
    }
}
